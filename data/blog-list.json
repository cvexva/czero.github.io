---
layout: nil
---

[{% for post in site.posts %}
    {
        "title": "{{post.title}}",
        "url": "{{ site.url }}{{ post.url }}",
        "excerpt": "{{ post.excerpt }}",
        "date": "{{ post.date | date_to_string }}",
        "tags": [{% for tag in post.tags %}
            "{{ tag }}"{% if forloop.last == false %},{% endif %}
        {% endfor %}]
    }{% if forloop.last == false %},{% endif %}
{% endfor %}]